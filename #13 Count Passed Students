#include <iostream>
using namespace std;

// Function declaration
void count_pass(int marks[], int size);

int main()
{
    const int size = 5;
    int marks[size] = { 35, 78, 40, 22, 90 };

    // Call the function
    count_pass(marks, size);

    return 0;
}

// Function definition
void count_pass(int marks[], int size)
{
    // Count marks >= 40
    int pass_count = 0;

    for (int index = 0; index < size; index++)
    {
        if (marks[index] >= 40)
        {
            pass_count++;
        }
    }

    // Print number of passed students
    cout << "Passed students: " << pass_count << endl;
}
